<tr id="acls_title_row" {{bind-attr style="Pcs.acls_page"}}><td id="page_header" colspan=3>
    ACLS
  </td>
</tr>
<tr><td>HI</td></tr>
<tr {{bind-attr style="Pcs.acls_page"}}><td class="borderbottom">&nbsp;</td><td class="borderbottom">&nbsp;</td></tr>
<tr id="acls_list_row" {{bind-attr style="Pcs.acls_page"}}>
  <td id="acls_roles_list" class="node_list">
    <table cellpadding=0 cellspacing=0 style="float:left;">
      <tr>
        <th><input type="checkbox" onchange="checkBoxToggle(this,false)"></th><th></th><th>ROLE&nbsp;NAME</th>
      </tr>
      {{#each role in Pcs.aclsController.role_list}}
      <tr>
        <td class="node_list_check">
          {{view Ember.Checkbox checkedBinding="checked" class="node_list_check"}}
        </td>
        <td class="node_list_sprite">
          <div class="check sprites"></div>
        </td>
        <td>{{role}}</td>
      </tr>
      {{/each}}

    </table>
  </td>
  <td id="acl_info" colspan=2>
    <table>
      <tr><td>Role Name:</td><td><input type="text"></td></tr>
      <tr><td>Role Description:</td><td><input type="text"></td></tr>
    </table>
    <table>
      <tr><td colspan=2 style="display: block;" onclick="show_hide_constraints(this)" class="datatable_header hover-pointer"><span style="" class="downarrow sprites"></span><span style="display: none;" class="rightarrow sprites"></span>Permissions (n)</td></tr>
      <tr><td colspan=2>
          <div id="">
            <table class="datatable">
              <tr><th>Role Name</th><th>Description</th><th>Type</th><th>XPath/ID</th><th>Query/ID</th></tr>
              <tr><td style="color: gray;">NONE</td><td></td><td></td></tr>
              <tr id="new_acl">
                <td><input type="text" name="role_id"></td>
                <td><input type="text"  name="role_description"></td>
                <td><select name="role_type"><option>read</option><option>write</option><option>deny</option></select></td>
                <td><select name="role_xpath_id"><option>XPath</option><option>ID</option></td>
                <td><input type="text" name="role_query_id"></td>
                <td><button type="button" onclick="" name="add">Add</button></td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
      <tr><td colspan=2 style="display: block;" onclick="show_hide_constraints(this)" class="datatable_header hover-pointer"><span style="" class="downarrow sprites"></span><span style="display: none;" class="rightarrow sprites"></span>Users Assigned (n)</td></tr>
      <tr><td colspan=2>
          <div id="">
            <table class="datatable">
              <tr><th>User Name</th></tr>
              <tr><td style="color: gray;">NONE</td></tr>
              <tr id="new_acl">
                <td><input type="text" name="role_assign_user"></td>
                <td><button type="button" onclick="" name="add">Add</button></td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
      <tr><td colspan=2 style="display: block;" onclick="show_hide_constraints(this)" class="datatable_header hover-pointer"><span style="" class="downarrow sprites"></span><span style="display: none;" class="rightarrow sprites"></span>Groups Assigned (n)</td></tr>
      <tr><td colspan=2>
          <div id="">
            <table class="datatable">
              <tr><th>Group</th></tr>
              <tr><td style="color: gray;">NONE</td></tr>
              <tr id="new_acl">
                <td><input type="text" name="role_assign_user"></td>
                <td><button type="button" onclick="" name="add">Add</button></td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
    </table>
  </td>
</tr>
